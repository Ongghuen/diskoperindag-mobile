<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/namaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Item"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deskripsiItem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi Item"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/namaItem"
        app:layout_constraintTop_toBottomOf="@id/namaItem" />

    <TextView
        android:id="@+id/kuantitasItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QTY"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/deskripsiItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/namaItem" />

</androidx.constraintlayout.widget.ConstraintLayout>
